#include<iostream>
using namespace std;
int main()
{
	char a;
	int num;
	float dec;
	double number;
	cout<<"Size of char : "<<sizeof(a)<<" byte "<<endl;
	cout<<"Size of int : "<<sizeof(num)<<" bytes "<<endl;
	cout<<"Size of float : "<<sizeof(dec)<<" bytes "<<endl;
	cout<<"Size of double : "<<sizeof(number)<<" bytes "<<endl;
}
